{

  "compilerOptions": {

    "target": "es5",

    "module": "commonjs",

    "moduleResolution": "node",

    "sourceMap": true,

    "emitDecoratorMetadata": true,

    "experimentalDecorators": true,

    "lib": [ "es2015", "dom" ],

    "noImplicitAny": true,

    "suppressImplicitAnyIndexErrors": true,
    "rootDir": "app",
    "outDir": "wwwroot/app"

  },
  "exclude": [
    "node_modules",
    "wwwroot/node_modules"
  ],
  "compileOnSave": true

}